<% 
function setDate(s) {
    var date = new Date(s);
    var ngay = (date.getDate() <= 9) ? "0"+date.getDate() : date.getDate();
    return ngay+"/"+(date.getMonth()+1)+"/"+date.getFullYear(); 
}

function convert(str) {
  var date = new Date(str),
    mnth = ("0" + (date.getMonth() + 1)).slice(-2),
    day = ("0" + date.getDate()).slice(-2);
  return [date.getFullYear(), mnth, day].join("-");
}
%>
<div class="content">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12 m-0 p-0">
                <% if (thongBao != undefined) { %>
                <% if (thongBao.indexOf("Thành Công") != -1) { %>
                <div class="row alert alert-success ml-1 mr-1">
                    <%= thongBao %>
                    <button type="button" name="close" class="close ml-auto">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } else { %>
                <div class="row alert alert-danger">
                    <%= thongBao %>
                </div>
                <% } %>
                <% } %>
                <div class="card">
                    <div class="card-header row m-0">
                        <strong class="card-title col-6 m-0 p-0" style="margin-top: 9px !important;">DANH SÁCH SẢN PHẨM</strong>
                        <div class="col-6 text-right m-0 p-0">
                            <button class="rounded rounded-circle btn btn-success" data-toggle="modal"
                                data-target="#add"><i class="fa fa-plus"></i>
                            </button>
                        </div>

                    </div>
                    <div class="card-body pl-0 ml-0 mr-0 pr-0">
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Đơn vị</th>
                                    <th>Nhà phân phối</th>
                                    <th>Số lượng</th>
                                    <th>Số lượng tồn</th>
                                    <th>Đơn giá</th>
                                    <th>Số lượng nhập</th>
                                    <th>Ngày nhập</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% sanPham.forEach(function(item) { %>
                                <tr id="<%= item.id %>">
                                    <td><%- item.ten %></td>
                                    <td><%- item.donVi %> </td>
                                    <td><%- item.nhaPhanPhoi %></td>
                                    <td><%- item.soLuong %></td>
                                    <td><%- item.soLuongTon %></td>
                                    <td><%- item.donGia %></td>
                                    <td><%- item.soLuongNhap %></td>
                                    <td><%- setDate(item.ngayNhap) %></td>
                                    <td>
                                        <a value="<%- item._id %>" data-toggle="modal"
                                            data-target="#exampleModal<%- item._id %>"
                                            class="btn btn-warning text-light pt-1 pb-1 pr-2 pl-2 mb-1"><i
                                                class="fa fa-pencil-square"></i></a>
                                        <a class="btn btn-danger text-light pt-1 pb-1 pr-2 pl-2 mb-1" data-toggle="modal"
                                            data-target="#Modal<%- item._id %>"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                <div class="modal fade" id="Modal<%- item._id %>" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title d-inline" id="exampleModalLabel">Xóa sản phẩm
                                                </h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Xóa sản phẩm <%- item.ten %>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-dismiss="modal">Hủy</button>
                                                <a href="/admin/delete/SanPham/<%- item._id %>"
                                                    class="btn btn-danger">Xóa</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="exampleModal<%- item._id %>" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title d-inline" id="exampleModalLabel">Chỉnh sửa sản phẩm</h5>
                                                <button type="button" class="close" data-dismiss="modal"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <form class="p-2" method="post" action="/admin/products/edit">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Tên sản phẩm</label>
                                                        <input type="text" class="form-control" name="ten"
                                                            value="<%- item.ten %>" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Đơn vị</label>
                                                        <select class="form-control" name="donVi">
                                                            <option value="Cai"
                                                                <% if(item.donVi == 'Cai'){ %> selected<% } %>>Cái</option>
                                                            <option value="Hop"
                                                                <% if(item.donVi == 'Hop'){ %> selected<% } %>>Hộp</option>
                                                            <option value="Cuon"
                                                               <% if(item.donVi == 'Cuon'){ %> selected<% } %>>Cuộn</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Nhà phân phối</label>
                                                        <select class="form-control" name="nhaPhanPhoi">
                                                            <option value="Garena""
                                                                <% if(item.nhaPhanPhoi == 'Cai'){ %> selected<% } %>>Garena</option>
                                                            <option value="VNG"
                                                                <% if(item.nhaPhanPhoi == 'Hop'){ %> selected<% } %>>VNG</option>
                                                            <option value="Tencen""
                                                               <% if(item.nhaPhanPhoi == 'Tencen'){ %> selected<% } %>>Tencen</option>
                                                        </select>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Số lượng nhập</label>
                                                        <input type="text" class="form-control" name="soLuongNhap"
                                                            value="<%- item.soLuongNhap %>" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Số lượng tồn</label>
                                                        <input type="text" class="form-control" name="soLuongTon"
                                                            value="<%- item.soLuongTon %>" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Đơn giá</label>
                                                        <input type="text" class="form-control" name="donGia"
                                                            value="<%- item.donGia %>" />
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label class="font-weight-bold">Ngày nhập</label>
                                                        <input type="date" class="form-control" name="ngayNhap"
                                                            value="<%= convert(item.ngayNhap) %>" />
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button value="<%= item._id %>" type="submit" name="edit" class="btn btn-success w-25">Sửa</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-inline-block" id="smallmodalLabel">Thêm sản phẩm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="p-2" method="post" action="/admin/products/add">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="font-weight-bold">Tên sản phẩm</label>
                        <input type="text" class="form-control" name="ten" value="" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Đơn vị</label>
                        <select class="form-control" name="donVi">
                            <option value="Cai">Cái</option>
                            <option value="Cuon">Cuộn</option>
                            <option value="Hop">Hộp</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Nhà phân phối</label>
                        <select class="form-control" name="nhaPhanPhoi">
                            <option value="Garena"">Garena</option>
                            <option value="VNG"">VNG</option>
                            <option value="Tencen"">Tencen</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Số lượng nhập</label>
                        <input type="text" class="form-control" name="soLuongNhap" value="" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Đơn giá</label>
                        <input type="text" class="form-control" name="donGia" value="" />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Ngày nhập</label>
                        <input type="date" class="form-control" name="ngayNhap"
                            value="" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success w-25">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>

